{
  "name": "minimal-theme",
  "version": "1.0.0",
  "description": "A clean, lightweight WordPress theme designed with simplicity in mind. This theme provides a classic WordPress experience without Gutenberg blocks, with a focus on performance and accessibility.",
  "main": "script.js",
  "scripts": {
    "sass": "sass scss/main.scss:assets/css/frontend.css scss/admin.scss:assets/css/admin.css scss/login.scss:assets/css/login.css --style=compressed --source-map",
    "sass:watch": "sass --watch scss/main.scss:assets/css/frontend.css scss/admin.scss:assets/css/admin.css scss/login.scss:assets/css/login.css --style=compressed --source-map",
    "minify": "terser script.js -o assets/js/script.min.js",
    "minify:watch": "onchange 'script.js' -- npm run minify",
    "postcss": "postcss assets/css/*.css --use autoprefixer --replace",
    "build": "npm-run-all sass postcss",
    "dev": "npm-run-all --parallel sass:watch minify:watch",
    "start": "npm run dev",
    "production": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galliweb/minimal-theme.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/galliweb/minimal-theme/issues"
  },
  "homepage": "https://github.com/galliweb/minimal-theme#readme",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^11.0.0",
    "terser": "^5.39.0"
  },
  "dependencies": {
    "postcss": "^8.5.3",
    "sass": "^1.85.1"
  }
}
