{
  "name": "minimal-theme",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "sass": "sass scss/main.scss:assets/css/main.css scss/_admin.scss:assets/css/admin.css scss/_login.scss:assets/css/login.css --style=compressed --source-map",
    "sass:watch": "sass --watch scss/main.scss:assets/css/main.css scss/_admin.scss:assets/css/admin.css scss/_login.scss:assets/css/login.css --style=compressed --source-map",
    "postcss": "postcss assets/css/*.css --use autoprefixer --replace",
    "build": "npm-run-all sass postcss",
    "browser-sync": "browser-sync start --proxy 'https://fastpage-playground.local/' --files 'assets/css/*.css, assets/js/*.js, **/*.php' --inject-changes --no-notify --open=false --host 'fastpage-playground.local' --port 3000",
    "dev": "npm-run-all --parallel sass:watch",
    "start": "npm run dev",
    "production": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/galliweb/minimal-theme.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/galliweb/minimal-theme/issues"
  },
  "homepage": "https://github.com/galliweb/minimal-theme#readme",
  "description": "",
  "devDependencies": {
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "sass": "^1.85.1"
  },
  "dependencies": {
    "browser-sync": "^3.0.3"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {
        "cascade": false
      }
    }
  }
}